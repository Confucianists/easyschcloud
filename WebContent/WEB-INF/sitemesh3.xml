<?xml version="1.0" encoding="UTF-8"?>
<sitemesh>
	<!-- 指明满足“/*”的页面，将被“/WEB-INF/views/decorators/decorator.html”所装饰 -->
	<mapping path="/manage/*" decorator="/WEB-INF/views/decorator.jsp" />
	<mapping path="/teacher/*" decorator="/WEB-INF/views/teacherdecorator.jsp" />
	<mapping path="/homepage/*" decorator="/WEB-INF/views/homepagedecorator.jsp" />
	<!-- 指明满足“/exclude.jsp*”的页面，将被排除，不被装饰 -->
	<mapping path="/exclude.jsp*" exclue="true" />
</sitemesh>